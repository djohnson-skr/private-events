<h1>See details about <%= @event.name %> below</h1>

Creator: <%= @event.creator.name %><br>
<%= @event.name %><br>
<%= @event.date %><br>
<%= @event.location %><br>
<%= @event.description %><br><br>

<% form_with model: Rsvp.new do |form| %>
  <%= form.hidden_field :attendee_event_id, value => @event.id%>
  <%= form.hidden_field :attendee__id, value => current_user.id%>
  <%= form.submit "Reserve a spot" %>
<% end %>

<%= link_to "All Events", events_path%><br>

<% if current_user.id == @event.creator.id %>
  <%= link_to "My Events", user_path(current_user) %>
<% end %>
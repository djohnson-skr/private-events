<h1>Create a new Event!</h1>

<%= form_with model: @event do |form| %>
  <%= form.label("Name") %>
  <%= form.text_field(:name, placeholder: "Name of your event") %><br><br>
  <%= form.label("Date") %>
  <%= form.text_field(:date) %><br><br>
  <%= form.label("Location") %>
  <%= form.text_field(:location) %><br><br>
  <%= form.label("Description") %>
  <%= form.text_field(:description) %><br><br>
  <%= form.submit %>
<% end %>

<% if @event.errors.any? %>
  <% @event.errors.each do |error| %>
    <%= error.full_message %>
  <% end %>
<% end %>